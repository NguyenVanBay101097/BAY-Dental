@model IEnumerable<Umbraco.Web.Models.ContentEditing.SaleOrderRevenueReport>
@using Umbraco.Web.Models.ContentEditing;
@{
    var configPrint = ViewData["ConfigPrint"] as ConfigPrintDisplay;
    Layout = "~/Views/Shared/_PrintLayout.cshtml";
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    var company = ViewData["company"] as CompanyPrintVM;
    var dateFrom = ViewData["dateFrom"] as DateTime?;
    var dateTo = ViewData["dateTo"] as DateTime?;
    var user = ViewData["user"] as ApplicationUserSimple;

}
@if (!configPrint.IsInfoCompany)
{
    <div class="d-flex mb-2">
        @if (!string.IsNullOrEmpty(company.Logo))
        {
            <img class="img-fluid me-3 w-25" src="@(company.Logo)" alt="@company.Name">
        }
        <div>
            <div class="text-xl font-semibold">@company.Name</div>
            @if (!string.IsNullOrEmpty(company.Address))
            {
                <div>Địa chỉ: @company.Address</div>
            }
            @if (!string.IsNullOrEmpty(company.Phone))
            {
                <div>ĐT: @company.Phone</div>
            }
            @if (!string.IsNullOrEmpty(company.Email))
            {
                <div>Email: @company.Email</div>
            }
        </div>
    </div>
}
<div class="text-center mb-3">
    <div class="text-3xl font-semibold">BÁO CÁO DỰ KIẾN THU</div>
</div>
<div class="o_form_view mb-2">
    <div class="h-60 w-100 pt-3">
        <table class="table table-bordered table-sm">
            <thead>
                <tr class="bg-info font-semibold">
                    <th scope="col" class="text-center">Số phiếu</th>
                    <th scope="col" class="text-center">Khách hàng</th>
                    <th scope="col" class="text-center">Tiền điều trị</th>
                    <th scope="col" class="text-center">Thanh toán</th>
                    <th scope="col" class="text-center">Còn lại</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model)
                {
                    <tr>
                        <td class="text-center">@(row.Name)</td>
                        <td class="text-left">@(row.PartnerName)</td>
                        <td class="text-right">@(string.Format(info, "{0:0,0}", row.AmountTotal))</td>
                        <td class="text-center">@(string.Format(info, "{0:0,0}", row.TotalPaid))</td>
                        <td class="text-left">@(string.Format(info, "{0:0,0}", row.Residual))</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
    <div class="d-flex">
        <div class="col">

        </div>
        <div class="col">
            <div class="text-center">
                <span> @(string.Format(info, "{0:dddd}", DateTime.Now)), Ngày @DateTime.Now.Day tháng @DateTime.Now.Month năm @DateTime.Now.Year </span> <br />
                <span class="font-semibold">Người lập báo cáo</span> <br />
                <i>(Ký, họ tên)</i> <br />
                <span></span> <br />
                <span></span> <br />
                <span></span> <br />
                <span class="font-semibold">@(user == null ? "" : user.Name.ToUpper())</span>
            </div>
        </div>
    </div>
</div>
