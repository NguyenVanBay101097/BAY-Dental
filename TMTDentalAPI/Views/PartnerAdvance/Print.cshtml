@model Umbraco.Web.Models.ContentEditing.PartnerAdvancePrint
@{
    Layout = "~/Views/Shared/_LayoutA5.cshtml";
    var culture = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

<div>
    <div class="d-flex mb-2">
        @if (!string.IsNullOrEmpty(Model.Company.Logo))
        {
            <img class="img-fluid me-3 w-20" src="@Model.Company.Logo" alt="@Model.Company.Name">
        }
        <div>
            <div class="text-xl font-semibold">@Model.Company.Name</div>
            @if (!string.IsNullOrEmpty(Model.Company.Address))
            {
                <div>Địa chỉ: @Model.Company.Address</div>
            }
            @if (!string.IsNullOrEmpty(Model.Company.Phone))
            {
                <div>ĐT: @Model.Company.Phone</div>
            }
            @if (!string.IsNullOrEmpty(Model.Company.Email))
            {
                <div>Email: @Model.Company.Email</div>
            }
        </div>
    </div>
    <div class="text-center mb-3">
        @if (Model.Type == "advance")
        {
            <div class="text-3xl font-semibold">PHIẾU ĐÓNG TẠM ỨNG</div>
        }
        else
        {
            <div class="text-3xl font-semibold">PHIẾU HOÀN TẠM ỨNG</div>
        }
        <div>Ngày @Model.Date.Day tháng @Model.Date.Month năm @Model.Date.Year </div>
        <div class="font-semibold">Số: @Model.Name</div>
    </div>
    <div class="o_form_view mb-4">
        <div class="o_group">
            <table class="o_group o_inner_group">
                <tbody>
                    <tr>
                        <td colspan="1" class="o_td_label">
                            <label class="o_form_label o_form_label_help">
                                @if (Model.Type == "advance")
                                {
                                    <span>Người nhận tiền</span>
                                }
                                else
                                {
                                    <span>Người nộp tiền</span>
                                }
                            </label>
                        </td>
                        <td colspan="1" style="width: 100%;">
                            @Model.PartnerName
                        </td>
                    </tr>

                    <tr>
                        <td colspan="1" class="o_td_label">
                            <label class="o_form_label o_form_label_help">
                                <span>Phương thức thanh toán</span>
                            </label>
                        </td>
                        <td colspan="1" style="width: 100%;">
                            @Model.JournalName
                        </td>
                    </tr>
                    <tr>
                        <td colspan="1" class="o_td_label">
                            <label class="o_form_label o_form_label_help">
                                Số tiền
                            </label>
                        </td>
                        <td colspan="1" style="width: 100%;">
                            <strong>@Model.Amount.ToString("n0", culture) VNĐ</strong>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="1" class="o_td_label">
                            <label class="o_form_label o_form_label_help">
                                Bằng chữ
                            </label>
                        </td>
                        <td colspan="1" style="width: 100%;">
                            @Model.AmountText
                        </td>
                    </tr>
                    <tr>
                        <td colspan="1" class="o_td_label">
                            <label class="o_form_label o_form_label_help">
                                Nội dung
                            </label>
                        </td>
                        <td colspan="1" style="width: 100%;">
                            @Model.Note
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex">
        <div class="col">
            <div class="text-center">
                <span class="font-semibold"> Người lập phiếu</span> <br />
                <i>(Ký, họ tên)</i> <br />
                <span></span> <br />
                <span></span> <br />
                <span></span> <br />
                <span class="font-semibold">@(Model.UserName == null ? "" : Model.UserName)</span>
            </div>
        </div>
        <div class="col">
            <div class="text-center">
                @if (Model.Type == "chi")
                {
                    <span class="font-semibold">Người nhận tiền</span> <br />
                }
                else
                {
                    <span class="font-semibold">Người nộp tiền</span> <br />
                }
                <i>(Ký, họ tên)</i> <br />
                <span></span> <br />
                <span></span> <br />
                <span></span> <br />
                <span class="font-semibold">@(Model.PartnerName == null ? "" : Model.PartnerName)</span>
            </div>
        </div>
    </div>
</div>