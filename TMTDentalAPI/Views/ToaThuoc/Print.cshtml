@model ApplicationCore.Entities.ToaThuoc;
@using Umbraco.Web.Models.ContentEditing;
@{
    var configPrint = ViewData["ConfigPrint"] as ConfigPrintDisplay;
    var culture = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    Layout = "~/Views/Shared/_PrintLayout.cshtml";
}

<div>
    @if (!configPrint.IsInfoCompany)
    {
        <div class="d-flex mb-2">
            @if (!string.IsNullOrEmpty(Model.Company.Logo))
            {
                <img class="img-fluid me-3 w-20" src="@Model.Company.Logo" alt="@Model.Company.Name">
            }
            <div>
                <div class="text-xl font-semibold">@Model.Company.Name</div>
                @if (!string.IsNullOrEmpty(Model.Company.Partner.GetAddress()))
                {
                    <div>Địa chỉ: @Model.Company.Partner.GetAddress()</div>
                }
                @if (!string.IsNullOrEmpty(Model.Company.Phone))
                {
                    <div>ĐT: @Model.Company.Phone</div>
                }
                @if (!string.IsNullOrEmpty(Model.Company.Email))
                {
                    <div>Email: @Model.Company.Email</div>
                }
            </div>
        </div>
    }

    <div class="text-center mb-2">
        <div class="text-3xl font-semibold">ĐƠN THUỐC</div>
        <div>Ngày @Model.Date.Day tháng @Model.Date.Month năm @Model.Date.Year </div>
        <div class="font-semibold">Số: @Model.Name</div>
    </div>
    <div class="o_form_view">
        <div class="o_group">
            <table class="o_group o_inner_group o_group_col_8">
                <tbody>
                    <tr>
                        <td colspan="1" class="o_td_label">
                            <label class="o_form_label o_form_label_help">
                                Khách hàng
                            </label>
                        </td>
                        <td colspan="1" style="width: 100%;">@Model.Partner.DisplayName</td>
                    </tr>
                    <tr>
                        <td colspan="1" class="o_td_label">
                            <label class="o_form_label o_form_label_help">
                                Địa chỉ
                            </label>
                        </td>
                        <td colspan="1" style="width: 100%;">@Model.Partner.GetAddress()</td>
                    </tr>
                    <tr>
                        <td colspan="1" class="o_td_label">
                            <label class="o_form_label o_form_label_help">
                                Bác sĩ
                            </label>
                        </td>
                        <td colspan="1" style="width: 100%;">@(Model.Employee == null ? "" : Model.Employee.Name)</td>
                    </tr>
                </tbody>
            </table>
            <table class="o_group o_inner_group o_group_col_4">
                <tbody>
                    <tr>
                        <td colspan="1" class="o_td_label">
                            <label class="o_form_label o_form_label_help">
                                Giới tính
                            </label>
                        </td>
                        <td colspan="1" style="width: 100%;">@Model.Partner.GetGender</td>
                    </tr>

                    <tr>
                        <td colspan="1" class="o_td_label">
                            <label class="o_form_label o_form_label_help">
                                Tuổi
                            </label>
                        </td>
                        <td colspan="1" style="width: 100%;">@Model.Partner.GetAge</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div>
        <table class="table table-sm table-borderless">
            <tbody>
                @{ var index = 1; }
                @foreach (var line in Model.Lines)
                {
                    <tr>
                        <td width="30"><span class="font-semibold">@(index++).</span></td>
                        <td>
                            <div class="d-flex justify-content-between">
                                <div class="font-semibold">@line.Product.Name</div>
                                <div>
                                    <span class="font-semibold">@line.Quantity.ToString("n0", culture)</span>
                                    @line.Product.UOM.Name
                                </div>
                            </div>
                            <div>
                                Ngày uống <span class="font-semibold">@line.NumberOfTimes.ToString("n0")</span> lần,
                                mỗi lần <span class="font-semibold">@line.AmountOfTimes.ToString("n0")</span> @line.Product.UOM.Name,
                                uống trong <span class="font-semibold">@line.NumberOfDays.ToString("n0")</span> ngày (<span class="font-semibold">@line.GetUseAtDisplay()</span>)
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <div class="o_form_view mb-2">
            <table class="o_group o_inner_group">
                <tbody>
                    <tr>
                        <td colspan="1" class="o_td_label">
                            <label class="o_form_label o_form_label_help">
                                Lời dặn
                            </label>
                        </td>
                        <td colspan="1" style="width: 100%;">@Model.Note</td>
                    </tr>
                    <tr>
                        <td colspan="1" class="o_td_label">
                            <label class="o_form_label o_form_label_help">
                                Chẩn đoán bệnh
                            </label>
                        </td>
                        <td colspan="1" style="width: 100%;">@Model.Diagnostic</td>
                    </tr>
                    <tr>
                        <td colspan="1" class="o_td_label">
                            <label class="o_form_label o_form_label_help">
                                Tái khám
                            </label>
                        </td>
                        <td colspan="1" style="width: 100%;">
                            @(Model.ReExaminationDate.HasValue ? Model.ReExaminationDate.Value.ToString("dd/MM/yyyy") : "")
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="text-center">
                <span class="font-semibold">Bác sĩ</span> <br />
                <i>(Ký, họ tên)</i> <br />
                <span></span> <br />
                <span></span> <br />
                <span></span> <br />
                <span class="font-semibold">@(Model.Employee == null ? "" : Model.Employee.Name.ToUpper())</span>
            </div>
        </div>
        <div class="col">
            <div class="text-center">
                <span class="font-semibold"> Bệnh nhân</span> <br />
                <i>(Ký, họ tên)</i> <br />
                <span></span> <br />
                <span></span> <br />
                <span></span> <br />
                <span class="font-semibold">@Model.Partner.Name.ToUpper()</span>
            </div>
        </div>
    </div>
</div>