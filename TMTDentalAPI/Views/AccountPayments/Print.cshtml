    <div class="d-flex">
        <div class="col">
            <div class="text-center">
                <span class="font-semibold"> Người lập phiếu</span> <br />
                <i>(Ký, họ tên)</i> <br />
                <span></span> <br />
                <span></span> <br />
                <span></span> <br />
                <span class="font-semibold">
                    @if (Model.PaymentType == "inbound")
                    {
                        @(!string.IsNullOrEmpty(Model.PartnerName) ? Model.PartnerName.ToUpper() : "")
                    }
                    else
                    {
                        @(!string.IsNullOrEmpty(Model.UserName) ? Model.UserName.ToUpper() : "")
                    }
                </span>
            </div>
        </div>
        <div class="col">
            <div class="text-center">
                <span class="font-semibold"> Người nhận tiền</span> <br />
                <i>(Ký, họ tên)</i> <br />
                <span></span> <br />
                <span></span> <br />
                <span></span> <br />
                <span class="font-semibold">
                    @if (Model.PaymentType == "inbound")
                    {
                        @(!string.IsNullOrEmpty(Model.UserName) ? Model.UserName.ToUpper() : "")
                    }
                    else
                    {
                        @(!string.IsNullOrEmpty(Model.PartnerName) ? Model.PartnerName.ToUpper() : "")
                    }
                </span>
            </div>
        </div>
    </div>
</div>
