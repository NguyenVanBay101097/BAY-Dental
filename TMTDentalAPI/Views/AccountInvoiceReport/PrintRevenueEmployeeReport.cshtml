@model IEnumerable<Umbraco.Web.Models.ContentEditing.RevenueEmployeeReportPrintVM>
@using Umbraco.Web.Models.ContentEditing;
@{
    var configPrint = ViewData["ConfigPrint"] as ConfigPrintDisplay;
    Layout = "~/Views/Shared/_PrintLayout.cshtml";
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    var company = ViewData["company"] as CompanyPrintVM;
    var dateFrom = ViewData["dateFrom"] as DateTime?;
    var dateTo = ViewData["dateTo"] as DateTime?;
    var user = ViewData["user"] as ApplicationUserSimple;

}
@if (!configPrint.IsInfoCompany)
{
    <div class="d-flex mb-2">
        @if (!string.IsNullOrEmpty(company.Logo))
        {
            <img class="img-fluid me-3 w-25" src="@(company.Logo)" alt="@company.Name">
        }
        <div>
            <div class="text-xl font-semibold">@company.Name</div>
            @if (!string.IsNullOrEmpty(company.Address))
            {
                <div>Địa chỉ: @company.Address</div>
            }
            @if (!string.IsNullOrEmpty(company.Phone))
            {
                <div>ĐT: @company.Phone</div>
            }
            @if (!string.IsNullOrEmpty(company.Email))
            {
                <div>Email: @company.Email</div>
            }
        </div>
    </div>
}
<div class="text-center mb-3">
    <div class="text-3xl font-semibold">BÁO CÁO DOANH THU THEO NHÂN VIÊN</div>
    @if (dateFrom != null && dateTo != null)
    {
        <div>Từ ngày @(string.Format(info, "{0:dd/MM/yyyy}", dateFrom)) đến ngày @(string.Format(info, "{0:dd/MM/yyyy}", dateTo))</div>
    }
</div>
<div class="o_form_view mb-2">
    <div class="h-60 w-100 pt-3">
        @foreach (var report in Model)
        {
            <div class="d-flex">
                <div class="w-50">
                    <div class="text-lg font-semibold mb-1">Nhân viên: @(report.Name!=null ? report.Name : "Không xác định")</div>
                </div>
                <div class="w-50">
                    <div class="float-right text-lg font-semibold mb-1">Tổng doanh thu @(string.Format(info, "{0:0,0}", report.PriceSubTotal))</div>
                </div>
            </div>
            <table class="table table-bordered table-sm">
                <thead>
                    <tr class="bg-info font-semibold">
                        <th scope="col" class="text-center" style="width:100px">Số phiếu</th>
                        <th scope="col" class="text-center" style="width:100px">Khách hàng</th>
                        <th scope="col" class="text-center" style="width:100px">Bác sĩ</th>
                        <th scope="col" class="text-center" style="width:100px">Phụ tá</th>
                        <th scope="col" class="text-center" style="width:100px">Dịch vụ</th>
                        <th scope="col" class="text-center" style="width:100px">Thanh toán</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in report.RevenueReportDetailPrints)
                    {
                        <tr>
                            <td class="text-center" style="width:100px">@(row.InvoiceOrigin)</td>
                            <td class="text-left" style="width:100px">@(row.PartnerName)</td>
                            <td class="text-right" style="width:100px">@(row.EmployeeName)</td>
                            <td class="text-center" style="width:100px">@(row.AssistantName)</td>
                            <td class="text-left" style="width:100px">@(row.ProductName)</td>
                            <td class="text-right" style="width:100px">@(string.Format(info, "{0:0,0}", row.PriceSubTotal))</td>
                        </tr>
                    }

                </tbody>
            </table>
        }

    </div>
    <div class="d-flex">
        <div class="col">

        </div>
        <div class="col">
            <div class="text-center">
                <span> @(string.Format(info, "{0:dddd}", DateTime.Now)), Ngày @DateTime.Now.Day tháng @DateTime.Now.Month năm @DateTime.Now.Year </span> <br />
                <span class="font-semibold">Người lập báo cáo</span> <br />
                <i>(Ký, họ tên)</i> <br />
                <span></span> <br />
                <span></span> <br />
                <span></span> <br />
                <span class="font-semibold">@(user == null ? "" : user.Name.ToUpper())</span>
            </div>
        </div>
    </div>
</div>
