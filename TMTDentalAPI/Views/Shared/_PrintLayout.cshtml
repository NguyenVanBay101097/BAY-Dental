@using Umbraco.Web.Models.ContentEditing;

@{
    var config = ViewData["ConfigPrint"] as ConfigPrintDisplay;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TDental.vn</title>

    <!-- Load paper.css for happy printing -->
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/paper-css/0.4.1/paper.css">*@

    @*<link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.css" />*@
    <link rel="stylesheet" type="text/css" href="/css/print.css" />
    <style>
        @@page {
            size: @config.PrintPaperSize.PaperFormat !important;
            margin: @(config.PrintPaperSize.TopMargin + "mm")  @(config.PrintPaperSize.RightMargin + "mm")  @(config.PrintPaperSize.BottomMargin + "mm") @(config.PrintPaperSize.LeftMargin + "mm") ;
        }

    </style>
</head>
<body>
    <div>
        @RenderBody()
    </div>
</body>
</html>
