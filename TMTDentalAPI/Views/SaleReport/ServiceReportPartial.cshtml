@model Umbraco.Web.Models.ContentEditing.ServiceReportPrint
@using Umbraco.Web.Models.ContentEditing;
@{
    var culture = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");

}

@functions{
    public string showTeethList(string toothType)
    {
        switch (toothType)
        {
            case "whole_jaw":
                return "Nguyên hàm";
            case "upper_jaw":
                return "Hàm trên";
            case "lower_jaw":
                return "Hàm dưới";
            default:
                return "";
        }
    }
}

<div class="text-center">
    <div class="text-3xl font-semibold">@Model.Title</div>
    <div>
        @((Model.DateFrom.HasValue? "Từ ngày " + Model.DateFrom.Value.ToString("dd/MM/yyyy") : "") +
            (Model.DateFrom.HasValue ? " Đến ngày " + Model.DateTo.Value.ToString("dd/MM/yyyy") : ""))
    </div>
</div>

<div class="mt-3">
    @foreach (var item in Model.data)
    {
        <table class="table table-sm table-bordered mb-2 border-top-0">
            <tbody>
                <tr>
                    <td><strong>@(Model.type == "time"?"Ngày": "Dịch vụ")</strong></td>
                    <td class="text-right" colspan="4"><strong>Số lượng</strong></td>
                    <td class="text-right" colspan="4"><strong>Tổng tiền</strong></td>
                </tr>
                <tr>
                    <td>@(Model.type == "time"? item.Date.Value.ToString("dd/MM/yyyy") : item.Name)</td>
                    <td class="text-right" colspan="4">@string.Format(culture, "{0:0}", @item.Quantity)</td>
                    <td class="text-right" colspan="4">@string.Format(culture, "{0:0}", item.TotalAmount)</td>
                </tr>
                <tr>
                    <td><strong>Ngày tạo</strong></td>
                    <td style="width:90px"><strong>Khách hàng</strong></td>
                    <td><strong>Dịch vụ</strong></td>
                    <td style="width:90px"><strong>Bác sĩ</strong></td>
                    <td><strong>Răng</strong></td>
                    <td style="width:70px" class="text-right"><strong>Số lượng</strong></td>
                    <td class="text-right"><strong>Thành tiền</strong></td>
                    <td style="width:70px"><strong>Trạng thái</strong></td>
                    <td><strong>Phiếu điều trị</strong></td>
                </tr>
                @foreach (var line in item.Lines)
                {
                    <tr>
                        <td>@(!line.Date.HasValue ? "" : line.Date.Value.ToString("dd/MM/yyyy"))</td>
                        <td>@line.OrderPartnerName</td>
                        <td>@line.Name</td>
                        <td>@(line.EmployeeName)</td>
                        <td>
                            @if (line.ToothType == "manual")
                            {
                                @string.Join(", ", line.Teeth.Select(x => x.Name))
                            }
                            else
                            {
                                @showTeethList(line.ToothType)
                            }
                        </td>
                        <td class="text-right">@string.Format(culture, "{0:0}", @line.ProductUOMQty)</td>
                        <td class="text-right">@string.Format(culture, "{0:0,0}", line.PriceSubTotal)</td>
                        <td>@(line.State == "done" ? "Hoàn thành" : (line.State == "cancel" ? "Ngừng dịch vụ" : "Đang điều trị"))</td>
                        <td>@line.OrderName</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="clearfix"></div>
</div>

<div class="d-flex mt-2">
    <div class="col-6">

    </div>
    <div class="col-6">
        <div class="text-center">
            <div>Ngày @DateTime.Now.Day, tháng @DateTime.Now.Month, năm @DateTime.Now.Year.</div>
            <span class="font-semibold">Người lập báo cáo</span> <br />
            <i>(Ký và ghi họ tên)</i> <br />
            <span></span> <br />
            <span></span> <br />
            <span></span> <br />
            <span class="font-semibold">@(Model.User != null && !string.IsNullOrEmpty(Model.User.Name)? Model.User.Name.ToUpper() : "")</span>
        </div>
    </div>
</div>
