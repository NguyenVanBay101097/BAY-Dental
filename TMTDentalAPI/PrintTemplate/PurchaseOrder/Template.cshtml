<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TDental.vn</title>
    <link rel="stylesheet" type="text/css" href="/css/print.css" />
    <style>
        @@page {
            size: A4 landscape !important;
            margin: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div>
            <div class="d-flex mb-2">
                {{ if model.company.logo != "" && model.company.logo != null}}
                <img class="img-fluid me-3 w-20" src="{{model.company.logo}}" alt="{{model.company.name}}">
                {{ end }}

                <div>
                    <div class="text-xl font-semibold">{{model.company.name}}</div>
                    {{if model.company.address != ""}}

                    <div>Địa chỉ: {{model.company.address}}</div>

                    {{ end }}

                    {{ if model.company.phone}}

                    <div>ĐT: {{model.company.phone}}</div>

                    {{ end }}

                    {{if model.company.email }}

                    <div>Email: {{model.company.email}}</div>

                    {{ end }}

                </div>
            </div>
            <div class="text-center mb-3">
                <div class="text-3xl font-semibold">{{model.type == "order" ? "Phiếu mua hàng" : "Phiếu trả hàng" }}</div>
                <div>Ngày {{model.date_order.day}} tháng {{model.date_order.month}} năm {{model.date_order.year}} </div>
                <div class="font-semibold">Số: {{model.name}}</div>
            </div>
            <div class="o_form_view mb-2">
                <div class="container">
                    <div class="row">
                        <table class="o_group o_inner_group col">
                            <tbody>
                                <tr>
                                    <td colspan="1" class="o_td_label">
                                        <div class="o_form_label o_form_label_help">
                                            Nhà cung cấp
                                        </div>
                                    </td>
                                    <td colspan="1" style="width: 100%;">
                                        <div class="o_field_widget">{{model.partner_name ? model.partner_name : ""}}</div>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="1" class="o_td_label">
                                        <label class="o_form_label o_form_label_help font-weight-bold">
                                            {{model.type == "order" ? "Tham chiếu nhập kho" : "Tham chiếu xuất kho" }}
                                        </label>
                                    </td>
                                    <td colspan="1" style="width: 100%;">
                                        {{model.stock_picking_name ? model.stock_picking_name : "" }}
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <table class="o_group o_inner_group col">
                            <tbody>
                                <tr>
                                    <td colspan="1" class="o_td_label">
                                        <label class="o_form_label o_form_label_help font-weight-bold">
                                            Ghi chú
                                        </label>
                                    </td>
                                    <td colspan="1" style="width: 100%;">
                                        {{model.note ? model.note : "" }}
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <div class="o_form_view mb-2">
                <table class="table table-sm table-bordered mb-0">
                    <tr>
                        <th>STT</th>
                        <th>Tên hàng hóa</th>
                        <th>Số lượng</th>
                        <th>Đơn vị</th>
                        <th>Đơn giá</th>
                        <th>CK (%)</th>
                        <th>Thành tiền</th>
                    </tr>
                    {{ for line in model.order_lines }}
                    <tr>
                        <td> {{line.sequence}}</td>
                        <td> {{line.name}}</td>
                        <td class="text-right">{{line.product_qty}}</td>
                        <td> {{line.product_uomname}}</td>
                        <td class="text-right">{{line.price_unit | math.format "N0" "vi-VN"}}</td>
                        <td class="text-right">{{line.discount}}</td>
                        <td class="text-right">{{line.price_subtotal | math.format "N0" "vi-VN"}}</td>
                    </tr>
                    {{end}}
                </table>
            </div>
            <div class="o_form_view float-right mb-2">
                <div class="d-flex">
                    <div>
                        <table class="o_group o_inner_group">
                            <tbody>
                                <tr>
                                    <td colspan="1" class="o_td_label">
                                        <label class="o_form_label o_form_label_help font-semibold">
                                            Tổng tiền
                                        </label>
                                    </td>
                                    <td class="pe-0 text-right " colspan="1" style="width: 100%;">{{model.amount_total | math.format "N0" "vi-VN"}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <div class="clearfix"></div>
            <div class="d-flex">
                <div class="col">

                </div>
                <div class="col">
                    <div class="text-center">
                        <div class="text-center">
                            <span class="font-semibold"> Người lập phiếu</span> <br />
                            <i>(Ký, họ tên)</i> <br />
                            <span></span> <br />
                            <span></span> <br />
                            <span></span> <br />
                            <span class="font-semibold">{{model.user_name ? (model.user_name | string.upcase) : ""}}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>